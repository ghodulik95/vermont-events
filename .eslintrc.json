// .eslintrc.json
{
  "root": true,

  // Default parser for your Node side (if you ever lint non-browser code here)
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier"
  ],
  "plugins": ["import"],

  "rules": {
    // your shared rulesâ€¦
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ]
  },

  "overrides": [
    {
      // Front-end bundle: public/js/**/*.js
      "files": ["public/js/**/*.js"],
      "env": {
        "browser": true,
        "node": false, // optional, disables Node globals
        "es6": true
      },
      "globals": {
        "FullCalendar": "readonly",
        "L": "readonly"
      }
    },
    {
      // Build-step scripts: everything under scripts/
      "files": ["scripts/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
      }
    }
  ]
}
